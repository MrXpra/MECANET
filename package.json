{
  "name": "mecanet-backend",
  "version": "1.8.3",
  "description": "Backend para sistema POS de taller mec√°nico",
  "main": "server.js",
  "type": "module",
  "bin": "start.cjs",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "setup": "node scripts/setup.js",
    "generate-jwt": "node scripts/generateJWT.js",
    "create-admin": "node scripts/createAdmin.js",
    "seed": "node scripts/seed.js",
    "clean-seed": "node scripts/cleanAndSeed.js",
    "reset-db": "node scripts/resetDatabase.js",
    "setup-client": "node scripts/setupNewClient.js",
    "clean-logs": "node scripts/cleanLogs.js",
    "fix-return-totals": "node scripts/fixReturnTotals.js",
    "client": "npm start --prefix client",
    "server": "nodemon server.js",
    "build:cloud": "npm install && npm install --prefix client && npm run build --prefix client",
    "build:desktop": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build-all.ps1 -SkipNodeJS",
    "package:release": "node scripts/create-release-zip.js",
    "release": "node scripts/automated-release.js",
    "build:exe": "node scripts/build-desktop.js",
    "build:portable": "powershell -ExecutionPolicy Bypass -File .\\scripts\\create-portable.ps1",
    "package:zip": "powershell -ExecutionPolicy Bypass -Command \"Compress-Archive -Path distribucion\\MECANET-Portable -DestinationPath distribucion\\MECANET-Portable.zip -Force\"",
    "clean:dist": "powershell -ExecutionPolicy Bypass -File .\\scripts\\clean-dist.ps1",
    "download:node": "powershell -ExecutionPolicy Bypass -File .\\scripts\\download-nodejs.ps1",
    "build:all": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build-all.ps1",
    "build:all:clean": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build-all.ps1 -Clean",
    "build:all:skip-node": "powershell -ExecutionPolicy Bypass -File .\\scripts\\build-all.ps1 -SkipNodeJS"
  },
  "keywords": [
    "pos",
    "autoparts",
    "inventory"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "adm-zip": "^0.5.16",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.2.1",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.5",
    "helmet": "^8.1.0",
    "inquirer": "^13.0.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.0.0",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.7",
    "open": "^11.0.0",
    "pdfkit": "^0.17.2",
    "semver": "^7.7.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "pkg": {
    "assets": [
      "client/dist/**/*",
      "server.js",
      "config/**/*.js",
      "controllers/**/*.js",
      "middleware/**/*.js",
      "models/**/*.js",
      "routes/**/*.js",
      "services/**/*.js",
      "utils/**/*.js"
    ],
    "targets": [
      "node18-win-x64"
    ],
    "outputPath": "dist"
  }
}